{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install dependencies with pip3",
            "type": "shell",
            "command": "${command:python3} -m pip install -r requirements.txt",
            "windows": {
                "command": "python3 -m pip install -r requirements.txt"
            },
            "osx": {
                "command": "pip3 install -r requirements.txt"
            },
            "linux": {
                "command": "pip3 install -r requirements.txt"
            }
        },
        {
            "label": "install dependencies with pip",
            "type": "shell",
            "command": "${command:python} -m pip install -r requirements.txt",
            "windows": {
                "command": "python -m pip install -r requirements.txt"
            },
            "osx": {
                "command": "pip install -r requirements.txt"
            },
            "linux": {
                "command": "pip install -r requirements.txt"
            }
        }
    ]
}
